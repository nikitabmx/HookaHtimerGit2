<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">



    <item android:state_pressed="true">

                     <shape android:shape="rectangle" >
                     <stroke />
                     <corners  android:radius="-15sp"/>
                         <gradient android:angle="180" android:startColor="@color/green" android:endColor="@color/green"/>
                     </shape>

    </item>







    <item android:state_focused="true">

                   <shape android:shape="rectangle" >
                       <gradient android:angle="180" android:startColor="@color/green" android:endColor="@color/red"/>
                       <stroke />
                       <corners  android:radius="-15sp"/>

                   </shape>

    </item>







    <item>
            <shape android:shape="rectangle" >
                <stroke />
                <corners  android:radius="-15sp"/>
                <gradient android:angle="180" android:startColor="@color/red" android:endColor="@color/superred"/>
            </shape>


    </item>




</selector>